FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the app
COPY . .


RUN npm run build

# Expose port 3000 for the prod server
EXPOSE 3000

# Start the prod server
CMD ["serve", "-s", "build"]